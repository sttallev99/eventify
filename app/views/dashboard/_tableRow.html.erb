<tr class="block border-b border-gray-200 p-4 hover:bg-gray-50 sm:table-row sm:border-0 sm:p-0">
    <td
        class="flex justify-between py-2 text-sm font-medium text-gray-900 sm:table-cell sm:px-6 sm:py-4"
        data-label="Event"
    >
        <span class="sm:hidden font-semibold text-gray-600">Event</span>
        <span><%= event.title %></span>
    </td>

    <td
        class="flex justify-between py-2 text-sm text-gray-600 sm:table-cell sm:px-6 sm:py-4"
        data-label="Date"
    >
        <span class="sm:hidden font-semibold text-gray-600">Date</span>
        <span><%= event.starts_at.strftime("%b %d, %Y") %></span>
    </td>

    <td
        class="flex justify-between py-2 text-sm text-gray-600 sm:table-cell sm:px-6 sm:py-4"
        data-label="Date"
    >
        <span class="sm:hidden font-semibold text-gray-600">Date</span>
        <span><%= event.ends_at.strftime("%b %d, %Y") %></span>
    </td>

    <td
        class="flex justify-between py-2 text-sm text-gray-600 sm:table-cell sm:px-6 sm:py-4"
        data-label="Location"
    >
        <span class="sm:hidden font-semibold text-gray-600">Location</span>
        <span><%= event.location %></span>
    </td>

    <td
        class="flex justify-between py-2 sm:table-cell sm:px-6 sm:py-4"
        data-label="Status"
    >
        <span class="sm:hidden font-semibold text-gray-600">Status</span>
        <span class="inline-flex items-center rounded-full px-2.5 py-0.5 text-xs font-semibold
            <%= case event.status
                when 'published'
                  'bg-green-100 text-green-800'
                when 'draft'
                  'bg-blue-100 text-blue-800'
                when 'cancelled'
                  'bg-red-100 text-red-800'
                when 'out_of_stock'
                  'bg-yellow-100 text-yellow-800'
                when 'archived'
                  'bg-gray-100 text-gray-800'
                else
                  'bg-gray-100 text-gray-800'
            end %>">
            <%= event.status %>
        </span>
              
    </td>

    <td
        class="flex justify-end py-2 text-sm sm:table-cell sm:px-6 sm:py-4 sm:text-right"
        data-label="Actions"
    >
        <%= link_to "View", event_path(event), class: "font-medium text-indigo-600 hover:text-indigo-900" %>
        <%= link_to "Edit", edit_event_path(event), class: "ml-2 font-medium text-indigo-600 hover:text-indigo-900" %>
        <%= link_to "Delete", event, data: { controller: "delete-confirm", action: "delete-confirm#delete" }, class: "ml-2 font-medium text-red-600 hover:text-red-900" %>
        
    </td>
</tr>