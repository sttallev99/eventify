<div class="overflow-x-auto">
  <table class="min-w-full divide-y divide-gray-200">
    
    <!-- Table Head (hidden on mobile) -->
    <thead class="hidden bg-gray-50 sm:table-header-group">
      <tr>
        <th class="px-6 py-3 text-left text-xs font-semibold uppercase tracking-wider text-gray-600">
          Event Name
        </th>
        <th class="px-6 py-3 text-left text-xs font-semibold uppercase tracking-wider text-gray-600">
          Date
        </th>
        <th class="px-6 py-3 text-left text-xs font-semibold uppercase tracking-wider text-gray-600">
          Location
        </th>
        <th class="px-6 py-3 text-left text-xs font-semibold uppercase tracking-wider text-gray-600">
          Status
        </th>
        <th class="px-6 py-3 text-right text-xs font-semibold uppercase tracking-wider text-gray-600">
          Actions
        </th>
      </tr>
    </thead>

    <tbody class="divide-y divide-gray-100 bg-white">
      
      <!-- Row -->
      <tr class="block border-b border-gray-200 p-4 hover:bg-gray-50 sm:table-row sm:border-0 sm:p-0">
        
        <td
          class="flex justify-between py-2 text-sm font-medium text-gray-900 sm:table-cell sm:px-6 sm:py-4"
          data-label="Event"
        >
          <span class="sm:hidden font-semibold text-gray-600">Event</span>
          <span>Summer Launch Party</span>
        </td>

        <td
          class="flex justify-between py-2 text-sm text-gray-600 sm:table-cell sm:px-6 sm:py-4"
          data-label="Date"
        >
          <span class="sm:hidden font-semibold text-gray-600">Date</span>
          <span>Aug 24, 2025</span>
        </td>

        <td
          class="flex justify-between py-2 text-sm text-gray-600 sm:table-cell sm:px-6 sm:py-4"
          data-label="Location"
        >
          <span class="sm:hidden font-semibold text-gray-600">Location</span>
          <span>Berlin, DE</span>
        </td>

        <td
          class="flex justify-between py-2 sm:table-cell sm:px-6 sm:py-4"
          data-label="Status"
        >
          <span class="sm:hidden font-semibold text-gray-600">Status</span>
          <span class="inline-flex items-center rounded-full bg-green-100 px-2.5 py-0.5 text-xs font-semibold text-green-800">
            Published
          </span>
        </td>

        <td
          class="flex justify-end py-2 text-sm sm:table-cell sm:px-6 sm:py-4 sm:text-right"
          data-label="Actions"
        >
          <button class="font-medium text-indigo-600 hover:text-indigo-900">
            Edit
          </button>
        </td>
      </tr>

      <!-- Row -->
      <tr class="block border-b border-gray-200 p-4 hover:bg-gray-50 sm:table-row sm:border-0 sm:p-0">
        
        <td class="flex justify-between py-2 text-sm font-medium text-gray-900 sm:table-cell sm:px-6 sm:py-4">
          <span class="sm:hidden font-semibold text-gray-600">Event</span>
          <span>Tech Meetup</span>
        </td>

        <td class="flex justify-between py-2 text-sm text-gray-600 sm:table-cell sm:px-6 sm:py-4">
          <span class="sm:hidden font-semibold text-gray-600">Date</span>
          <span>Sep 12, 2025</span>
        </td>

        <td class="flex justify-between py-2 text-sm text-gray-600 sm:table-cell sm:px-6 sm:py-4">
          <span class="sm:hidden font-semibold text-gray-600">Location</span>
          <span>Remote</span>
        </td>

        <td class="flex justify-between py-2 sm:table-cell sm:px-6 sm:py-4">
          <span class="sm:hidden font-semibold text-gray-600">Status</span>
          <span class="inline-flex items-center rounded-full bg-yellow-100 px-2.5 py-0.5 text-xs font-semibold text-yellow-800">
            Draft
          </span>
        </td>

        <td class="flex justify-end py-2 text-sm sm:table-cell sm:px-6 sm:py-4 sm:text-right">
          <button class="font-medium text-indigo-600 hover:text-indigo-900">
            Edit
          </button>
        </td>
      </tr>

    </tbody>
  </table>
</div>

<!-- Pagination -->
<div class="flex flex-col gap-4 border-t border-gray-200 px-6 py-4 sm:flex-row sm:items-center sm:justify-between">
  
  <!-- Results info -->
  <p class="text-sm text-gray-600">
    Showing <span class="font-medium">1</span> to <span class="font-medium">10</span> of
    <span class="font-medium">42</span> events
  </p>

  <!-- Pagination controls -->
  <div class="flex items-center justify-between gap-2 sm:justify-end">
    
    <!-- Mobile: Prev / Next -->
    <div class="flex w-full gap-2 sm:hidden">
      <button
        class="w-full rounded-md border border-gray-300 px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-100"
      >
        Previous
      </button>
      <button
        class="w-full rounded-md bg-indigo-600 px-4 py-2 text-sm font-semibold text-white hover:bg-indigo-500"
      >
        Next
      </button>
    </div>

    <!-- Desktop: Page numbers -->
    <div class="hidden items-center gap-1 sm:flex">
      <button class="rounded-md border border-gray-300 px-3 py-1.5 text-sm text-gray-700 hover:bg-gray-100">
        Previous
      </button>

      <button class="rounded-md bg-indigo-600 px-3 py-1.5 text-sm font-semibold text-white">
        1
      </button>
      <button class="rounded-md border border-gray-300 px-3 py-1.5 text-sm text-gray-700 hover:bg-gray-100">
        2
      </button>
      <button class="rounded-md border border-gray-300 px-3 py-1.5 text-sm text-gray-700 hover:bg-gray-100">
        3
      </button>

      <button class="rounded-md border border-gray-300 px-3 py-1.5 text-sm text-gray-700 hover:bg-gray-100">
        Next
      </button>
    </div>

  </div>
</div>

