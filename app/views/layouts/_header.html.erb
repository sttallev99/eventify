<header class="sticky top-0 z-50 bg-white border-b border-gray-200">
    <nav class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <div class="flex h-16 items-center justify-between">
            
            <!-- Logo -->
            <div class="flex items-center">
            <%= link_to image_tag("eventify_logo.jpg", alt: "Logo"), root_path, class: "w-20" %>
            </div>

            <!-- Desktop Navigation -->
            <div class="hidden md:flex md:items-center md:space-x-8">
                <%= link_to "Home", root_path, class: "text-sm font-medium text-gray-700 hover:text-indigo-600 transition"%>
                <%= link_to "New Events", new_event_path, class: "text-sm font-medium text-gray-700 hover:text-indigo-600 transition" %>
                <%= link_to "Categories", new_category_path, class: "text-sm font-medium text-gray-700 hover:text-indigo-600 transition" %>
            </div>

            <!-- Desktop CTA -->
            <div class="hidden md:flex md:items-center">
                <% if logged_in? %>
                <div class="relative group">
                    <!-- Trigger -->
                    <div
                    class="block rounded-md bg-indigo-600 px-3 py-2 text-center text-base font-semibold text-white hover:bg-indigo-500 transition"
                    >
                    Profile
                    </div>

                    <!-- Dropdown -->
                    <div
                    class="invisible absolute right-0 z-50 mt-2 w-40 rounded-md border border-gray-200 bg-white shadow-lg
                            opacity-0 transition-all duration-150
                            group-hover:visible group-hover:opacity-100"
                    >
                    <a
                        href="/account"
                        class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100"
                    >
                        Account
                    </a>
                    <%= button_to "Logout", logout_path, method: :delete, class: "block w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 border-0 bg-transparent" %>
                    </div>
                </div>
                <% else %>
                <a
                    href="#"
                    class="mt-3 block rounded-md bg-indigo-600 px-3 py-2 text-center text-base font-semibold text-white hover:bg-indigo-500"
                >
                    Get Started
                </a>
                <% end %>
            </div>

            <!-- Mobile Menu Button -->
            <div class="md:hidden">
            <button
                type="button"
                class="inline-flex items-center justify-center rounded-md p-2 text-gray-700 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-indigo-600"
                aria-label="Open menu"
            >
                <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M4 6h16M4 12h16M4 18h16" />
                </svg>
            </button>
            </div>
        </div>
    </nav>

    <!-- Mobile Navigation -->
    <div class="md:hidden border-t border-gray-200">
        <div class="space-y-1 px-4 py-4">
            <a href="#" class="block rounded-md px-3 py-2 text-base font-medium text-gray-700 hover:bg-gray-100">
            Home
            </a>
            <a href="#" class="block rounded-md px-3 py-2 text-base font-medium text-gray-700 hover:bg-gray-100">
            Features
            </a>
            <a href="#" class="block rounded-md px-3 py-2 text-base font-medium text-gray-700 hover:bg-gray-100">
            Pricing
            </a>
            <a href="#" class="block rounded-md px-3 py-2 text-base font-medium text-gray-700 hover:bg-gray-100">
            About
            </a>

            <a
            href="#"
            class="mt-3 block rounded-md bg-indigo-600 px-3 py-2 text-center text-base font-semibold text-white hover:bg-indigo-500"
            >
            Get Started
            </a>
        </div>
    </div>
</header>